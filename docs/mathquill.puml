class MathBlock <math.js> {
    -join(methodName)
    +html()
    +latex()
    +text()
    +keystroke(key, e, ctrlr)
    +moveOutOf(dir, cursor, updown)
    +selectOutOf(dir, cursor)
    +deleteOutOf(dir, cursor)
    +seek(pageX, cursor)
    +chToCmd(ch, options)
    +write(curor, cb)
    +focus()
    +blur()
}

class keystroke <keystroke.js> {
    +backspace()
    +deleteForward()
    -deleteDir (dir)
    -ctrlDeleteDir (dir)
    +moveLeft()
    +moveRight()
    -moveDir (dir)
    +moveUp()
    +moveDown()
    -moveUpDown (self, dir)
}

